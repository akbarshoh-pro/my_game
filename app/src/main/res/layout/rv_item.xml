<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="12dp"
    android:background="@drawable/bg_item"
    android:padding="16dp">

    <FrameLayout
        android:id="@+id/itemImgBg"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:background="@drawable/gr_img_1">

        <ImageView
            android:id="@+id/itemImg"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_die"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/itemImgBg"
        app:layout_constraintStart_toEndOf="@+id/itemImgBg"
        app:layout_constraintTop_toTopOf="@+id/itemImgBg">

        <TextView
            android:id="@+id/itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Мёртвая"
            android:textFontWeight="900"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/itemDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="или прикидывается"
            android:textColor="#000000"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>